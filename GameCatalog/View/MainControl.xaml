        <Button x:Name="FindGame" Content="Find" HorizontalAlignment="Left" Margin="898,0,0,0" VerticalAlignment="Top" Width="74" CommandParameter="{Binding Text, ElementName=textBox}" Command="{Binding Commands.FindGameCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
